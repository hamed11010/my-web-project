    <script>
    const API_BASE_URL = 'http://localhost:5000/api';

    // Function to navigate with token
    function navigateWithToken(url) {
        const token = localStorage.getItem('token');
        console.log('Token from localStorage:', token ? 'exists' : 'not found');
        
        if (!token) {
            Swal.fire({
                title: 'Login Required',
                text: 'Please log in to access this feature',
                icon: 'info',
                showCancelButton: true,
                confirmButtonText: 'Login',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/login';
                }
            });
            return;
        }

        // First verify the token
        console.log('Verifying token with API...');
        fetch(`${API_BASE_URL}/users/verify`, {
            method: 'GET',
            headers: {
                'Authorization': `Bearer ${token}`
            }
        })
        .then(response => {
            console.log('Token verification response:', response.status);
            if (!response.ok) {
                throw new Error('Token verification failed');
            }
            // If token is valid, navigate to the page with token in URL
            console.log('Token verified, navigating to:', url);
            window.location.href = `${url}?token=${token}`;
        })
        .catch(error => {
            console.error('Error:', error);
            if (error.message === 'Token verification failed') {
                Swal.fire({
                    title: 'Session Expired',
                    text: 'Please log in again to continue',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Login',
                    cancelButtonText: 'Cancel'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = '/login';
                    }
                });
            } else {
                Swal.fire({
                    title: 'Error',
                    text: 'Failed to access the requested page',
                    icon: 'error'
                });
            }
        });
    }

    // Handle unauthorized access for menu and cart
    function handleUnauthorizedAccess(event, feature) {
        event.preventDefault();
        const token = localStorage.getItem('token');
        if (!token) {
            Swal.fire({
                title: 'Login Required',
                text: 'Please log in to access this feature',
                icon: 'info',
                showCancelButton: true,
                confirmButtonText: 'Login',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/login';
                }
            });
            return;
        }

        // Verify token first
        fetch(`${API_BASE_URL}/users/verify`, {
            method: 'GET',
            headers: {
                'Authorization': `Bearer ${token}`
            }
        })
        .then(response => {
            if (!response.ok) {
                throw new Error('Token verification failed');
            }
            // If token is valid, navigate to the appropriate page
            if (feature.includes('menu')) {
                navigateWithToken('/boudz');
            } else if (feature.includes('cart')) {
                navigateWithToken('/hatem');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            if (error.message === 'Token verification failed') {
                Swal.fire({
                    title: 'Session Expired',
                    text: 'Please log in again to continue',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Login',
                    cancelButtonText: 'Cancel'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = '/login';
                    }
                });
            } else {
                Swal.fire({
                    title: 'Error',
                    text: 'Failed to access the requested page',
                    icon: 'error'
                });
            }
        });
    }

    // Handle admin features
    function handleAdminFeature(event, feature) {
        event.preventDefault();
        const token = localStorage.getItem('token');
        if (!token) {
            Swal.fire({
                title: 'Login Required',
                text: 'Please log in to access admin features',
                icon: 'info',
                showCancelButton: true,
                confirmButtonText: 'Login',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/login';
                }
            });
            return;
        }

        // First verify the token
        fetch(`${API_BASE_URL}/users/verify`, {
            method: 'GET',
            headers: {
                'Authorization': `Bearer ${token}`
            }
        })
        .then(response => {
            if (!response.ok) {
                throw new Error('Token verification failed');
            }
            // Then verify admin role
            return fetch(`${API_BASE_URL}/users/verify-admin`, {
                method: 'GET',
                headers: {
                    'Authorization': `Bearer ${token}`
                }
            });
        })
        .then(response => response.json())
        .then(data => {
            if (data.isAdmin) {
                if (feature === 'store-ordering') {
                    navigateWithToken('/rawan');
                } else if (feature === 'banned-accounts') {
                    navigateWithToken('/admin/banned-accounts');
                }
            } else {
                Swal.fire({
                    title: 'Access Denied',
                    text: 'You do not have permission to access admin features',
                    icon: 'error'
                });
            }
        })
        .catch(error => {
            console.error('Error:', error);
            if (error.message === 'Token verification failed') {
                Swal.fire({
                    title: 'Session Expired',
                    text: 'Please log in again to continue',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Login',
                    cancelButtonText: 'Cancel'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = '/login';
                    }
                });
            } else {
                Swal.fire({
                    title: 'Error',
                    text: 'Failed to verify admin status',
                    icon: 'error'
                });
            }
        });
    }

    // Check user role and show appropriate navigation
    function checkUserRole() {
        const token = localStorage.getItem('token');
        if (!token) {
            // Show guest navigation
            document.querySelectorAll('.guest-only').forEach(el => el.style.display = 'block');
            document.querySelectorAll('.user-only, .admin-only').forEach(el => el.style.display = 'none');
            return;
        }

        // Verify token and get user role
        fetch(`${API_BASE_URL}/users/verify`, {
            method: 'GET',
            headers: {
                'Authorization': `Bearer ${token}`
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.role === 'admin') {
                // Show admin navigation
                document.querySelectorAll('.admin-only').forEach(el => el.style.display = 'block');
                document.querySelectorAll('.guest-only, .user-only').forEach(el => el.style.display = 'none');
            } else {
                // Show user navigation
                document.querySelectorAll('.user-only').forEach(el => el.style.display = 'block');
                document.querySelectorAll('.guest-only, .admin-only').forEach(el => el.style.display = 'none');
            }
        })
        .catch(error => {
            console.error('Error verifying user role:', error);
            // On error, show guest navigation
            document.querySelectorAll('.guest-only').forEach(el => el.style.display = 'block');
            document.querySelectorAll('.user-only, .admin-only').forEach(el => el.style.display = 'none');
        });
    }

    // Logout function
    function logout() {
        localStorage.removeItem('token');
        localStorage.removeItem('userData');
        window.location.href = '/';
    }

    // Check user role on page load
    document.addEventListener('DOMContentLoaded', checkUserRole);

    // Carousel functionality
    document.addEventListener('DOMContentLoaded', () => {
        const carousel = document.querySelector('.carousel-slide');
        const prevBtn = document.querySelector('.prev-btn');
        const nextBtn = document.querySelector('.next-btn');
        const images = document.querySelectorAll('.slide-image');
        let currentIndex = 0;

        function updateCarousel() {
            const offset = -currentIndex * 100;
            carousel.style.transform = `translateX(${offset}%)`;
        }

        prevBtn.addEventListener('click', () => {
            currentIndex = (currentIndex - 1 + images.length) % images.length;
            updateCarousel();
        });

        nextBtn.addEventListener('click', () => {
            currentIndex = (currentIndex + 1) % images.length;
            updateCarousel();
        });

        // Auto-advance carousel every 5 seconds
        setInterval(() => {
            currentIndex = (currentIndex + 1) % images.length;
            updateCarousel();
        }, 5000);
    });

    // Sound functionality
    document.addEventListener('DOMContentLoaded', () => {
        const audio = document.getElementById('cafeAudio');
        const audioToggle = document.getElementById('audioToggle');
        const soundOnIcon = document.getElementById('soundOnIcon');
        const soundOffIcon = document.getElementById('soundOffIcon');
        const volumeSlider = document.getElementById('volumeSlider');

        audioToggle.addEventListener('click', () => {
            if (audio.paused) {
                audio.play();
                soundOnIcon.style.display = 'block';
                soundOffIcon.style.display = 'none';
            } else {
                audio.pause();
                soundOnIcon.style.display = 'none';
                soundOffIcon.style.display = 'block';
            }
        });

        volumeSlider.addEventListener('input', (e) => {
            audio.volume = e.target.value;
        });
    });
    </script>
